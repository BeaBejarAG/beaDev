    <isExposed>true</isExposed>
    <masterLabel>CSP: All Articles</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="limitAmount" type="Integer" min="3" max="200" default="10" label="Default search result limit" />
