            <property name="includeCommunityResults" type="Boolean" default="true" label="Include community in results" />
            <property name="includeReleaseNotesResults" type="Boolean" default="true" label="Include release notes in results" />
            <property name="includeServicesCatalogueResults" type="Boolean" default="true" label="Include services catalogue in results" />
            <property name="includeEventsResults" type="Boolean" default="true" label="Include events in results" />
            <property name="componentTitle" type="String" default="All articles" label="Title" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>