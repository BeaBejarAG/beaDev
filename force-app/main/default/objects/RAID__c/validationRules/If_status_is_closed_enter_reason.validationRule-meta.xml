<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_status_is_closed_enter_reason</fullName>
    <active>true</active>
    <description>If status is closed enter reason</description>
    <errorConditionFormula>AND(ISPICKVAL(Status__c, &quot;Closed&quot;), Reason_For_Closure__c = &quot;&quot;)</errorConditionFormula>
    <errorDisplayField>Reason_For_Closure__c</errorDisplayField>
    <errorMessage>If status is closed enter reason</errorMessage>
</ValidationRule>
