    <decisions>
        <description>Decides if Opp was created by CPQ process. 
SBQQ Primary Quote is not blank.</description>
        <name>Is_this_a_CPQ_Opp</name>
        <label>Is this a CPQ Opp?</label>
        <locationX>336</locationX>
        <locationY>155</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Standard_Opp</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Opportunity.SBQQ__PrimaryQuote__r.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Start</targetReference>
            </connector>
            <label>Standard Opp</label>
        </rules>
        <rules>
            <name>CPQ_Opp</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Opportunity.SBQQ__PrimaryQuote__r.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Cannot_Reopen_CPQ_Opps</targetReference>
            </connector>
            <label>CPQ Opp</label>
        </rules>
    </decisions>
