<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <decisions>
        <description>Checks the plan type to see if its Premier or not</description>
        <name>Check_Plan_Type</name>
        <label>Check Plan Type</label>
        <locationX>182</locationX>
        <locationY>311</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Plan_No_Longer_Premier</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.PlanType__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Premier</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.PlanType__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Premier</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Remove_Named_Agent</targetReference>
            </connector>
            <label>Plan No Longer Premier</label>
        </rules>
    </decisions>
    <description>This fires on Create and Update before the record saves</description>
    <interviewLabel>Entitlement - Create/Update (Pre Save) {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Entitlement - Create/Update (Pre Save)</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Remove named agent from plan</description>
        <name>Remove_Named_Agent</name>
        <label>Remove Named Agent</label>
        <locationX>50</locationX>
        <locationY>431</locationY>
        <inputAssignments>
            <field>NamedAgentEntitlement__c</field>
            <value>
                <stringValue></stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_Plan_Type</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>PlanType__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Entitlement</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
