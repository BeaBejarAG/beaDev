    <decisions>
        <name>Case_Closed_or_Resolved</name>
        <label>Case Closed or Resolved</label>
        <locationX>446</locationX>
        <locationY>158</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Case_Closed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>CaseIn.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Closed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Closed_Values_0</targetReference>
            </connector>
            <label>Is Case Closed</label>
        </rules>
        <rules>
            <name>Is_Case_Resolved</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
