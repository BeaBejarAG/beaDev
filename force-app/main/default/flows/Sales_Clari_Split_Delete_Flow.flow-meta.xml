        <name>Delete_Clari_Split</name>
        <label>Delete Clari Split</label>
        <locationX>227</locationX>
        <locationY>348</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Related_Split_ID__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <object>OpportunitySplit</object>
    </recordDeletes>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>Delete_Clari_Split</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Player_Managers_Inactive_User_ID__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>SplitTypeId</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>149580000004hXqAAI</stringValue>
            </value>
        </filters>
