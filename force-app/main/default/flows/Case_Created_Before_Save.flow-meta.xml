<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <decisions>
        <description>Checks for Spam Cases</description>
        <name>Is_It_A_Spam_Case</name>
        <label>Is It A Spam Case</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_A_Spam_Case</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ContactEmail</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Access-IT-No-Reply@theaccessgroup.com</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.SuppliedEmail</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Access-IT-No-Reply@theaccessgroup.com</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Dont_Create_Case_Field</targetReference>
            </connector>
            <label>Is A Spam Case</label>
        </rules>
        <rules>
            <name>Is_It_An_HR_Spam_Case</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Subject</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Employee Snapshot Updated: EMPLOYEE LICENSE EXCEEDED!; Licence Check: No licenses expiring</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Description</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>This is an automated notification that the number of live employees in your HR system is above your employee license.</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Dont_Create_Case_Field</targetReference>
            </connector>
            <label>Is It An HR Spam Case</label>
        </rules>
        <rules>
            <name>Is_Supplied_Email_Scam</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.SuppliedEmail</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>help@sysgroup.com</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Dont_Create_Case_Field</targetReference>
            </connector>
            <label>Is Supplied Email Scam</label>
        </rules>
        <rules>
            <name>Is_Supplied_Email_Postmaster</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.SuppliedEmail</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>postmaster</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Dont_Create_Case_Field</targetReference>
            </connector>
            <label>Is Supplied Email Postmaster</label>
        </rules>
        <rules>
            <name>Is_Email_Redirected</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Subject</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Your email has been automatically redirected</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Dont_Create_Case_Field</targetReference>
            </connector>
            <label>Is Email Redirected</label>
        </rules>
        <rules>
            <name>Is_GTN_Automatic_Response_Not_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Subject</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>GTN - Automatic response - Not-found - Subject</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Dont_Create_Case_Field</targetReference>
            </connector>
            <label>Is GTN Automatic Response Not Found</label>
        </rules>
    </decisions>
    <interviewLabel>Case - Created Before Save {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Case - Created Before Save</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Set_Dont_Create_Case_Field</name>
        <label>Set Dont Create Case Field</label>
        <locationX>176</locationX>
        <locationY>647</locationY>
        <inputAssignments>
            <field>Dont_Create_Case__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Is_It_A_Spam_Case</targetReference>
        </connector>
        <object>Case</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
