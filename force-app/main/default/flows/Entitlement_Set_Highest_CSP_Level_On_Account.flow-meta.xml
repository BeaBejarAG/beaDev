    <description>Sets the highest CSP level on the account based on the current active entitlements on the case.</description>
    <formulas>
        <description>Account Level Plan rank</description>
        <name>AccountEntPlanLevelRanked</name>
        <dataType>Number</dataType>
        <expression>Case(LOWER({!Get_Account_Data.Highest_CSP_Level__c}),
&quot;classic&quot;,0,
&quot;essential&quot;,1,
&quot;standard&quot;,2,
&quot;premier&quot;,3,
0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <description>Plan Level in a ranked order to help decide if a plan is higher or not</description>
        <name>IncommingEntPlanLevelRanked</name>
        <dataType>Number</dataType>
        <expression>Case(LOWER({!InEntitlement.PlanType__c}),
&quot;classic&quot;,0,
&quot;essential&quot;,1,
&quot;standard&quot;,2,
&quot;premier&quot;,3,
0)</expression>
        <scale>2</scale>
    </formulas>
