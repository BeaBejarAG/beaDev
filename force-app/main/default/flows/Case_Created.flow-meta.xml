    <decisions>
        <description>Checks that Business hours exist.</description>
        <name>Hours_Exist</name>
        <label>Hours Exist</label>
        <locationX>182</locationX>
        <locationY>575</locationY>
        <defaultConnector>
            <targetReference>Get_Default_UK_Hours</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>BH_No_Null</name>
            <conditionLogic>or</conditionLogic>
